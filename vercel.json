{
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },

  "builds": [
    {
      "src": "server/server.js", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server/server.js"
    }
  ],

  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}